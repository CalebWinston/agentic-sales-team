{
  "$schema": "https://developers.hubspot.com/docs/schema/app.json",
  "name": "GTM Skills",
  "description": "Access 500+ battle-tested GTM prompts directly in your HubSpot CRM. Get AI-powered recommendations based on deal stage and contact context.",
  "uid": "gtm-skills",
  "scopes": [
    "crm.objects.deals.read",
    "crm.objects.contacts.read",
    "crm.objects.companies.read"
  ],
  "public": true,
  "extensions": {
    "crm": {
      "cards": [
        {
          "file": "GTMSkillsCard.json",
          "title": "GTM Skills",
          "location": "crm.record.sidebar",
          "objectTypes": ["DEAL", "CONTACT", "COMPANY"]
        }
      ]
    }
  },
  "auth": {
    "redirectUrls": [
      "https://gtm-skills.com/api/hubspot/callback"
    ]
  },
  "webhooks": {},
  "allowedUrls": [
    "https://gtm-skills.com",
    "https://api.gtm-skills.com"
  ]
}
